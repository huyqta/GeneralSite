@model HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var cat in Model.ListProduct.Select(pro => pro.Category).Distinct().ToList())
{
    <div class="row">
        <div class="col-md-12">
            <p class="search-category-header bg-primary">@cat.Name</p>
        </div>
    </div>
    <div class="row">
        @foreach (var pro in Model.ListProduct.Where(pro => pro.CategoryId == cat.Id))
        {
            <div class="col-sm-4 category-homepage">
                <a asp-controller="Product" asp-action="Index" asp-route-id="@pro.Id">
                    <img src="@pro.ImageUrl" style="margin: 0 auto; display: block;" alt="@pro.Name" />
                    <p style="text-align: center;font-weight: 700;font-size: 16px; margin-top: 5px;">@pro.Name</p>
                </a>
                <p class="price-label-home" style="color: #242424;margin: 0 auto;"><strong>Giá:</strong> Liên hệ</p>
            </div>
        }
    </div>
}
