@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .contact-form {
        height: 465px;
        width: 100%;
        border: 4px solid transparent;
        border-image: url(https://template58484.motopreview.com/mt-demo/58400/58484/mt-content/uploads/2016/04/mt-317-contact-form.png) 3 repeat;
        border-left: none;
        border-right: none;
        border-bottom: none;
        padding: 15px;
    }
</style>

<div class="max-width-1200" style="margin: 0 auto;">
    <h3>CUSTOMER SERVICE - CONTACT US</h3>
    <hr />
    <div class="row" style="padding: 0px 15px;">
        <div class="sm-col-12" style="border: 1px solid #F0F0F0;">
            <form class="contact-form">
                <h4>SEND A MESSAGE</h4>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Subject heading" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Email address *" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Other reference" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Other reference" style="width: 100%; height: 200px;"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send!" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>
