@model HomeViewModel;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Công ty TNHH TM&DV Kim Huy Hoàng</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <link rel="icon" href="~/images/logo/logo.png">
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Anton|Montserrat|Oswald:400,700,800,900" rel="stylesheet">
    <style>
        a {
            color: #242424;
            text-decoration: none;
        }

            a:hover {
                color: rgba(36,36,36,0.65);
                text-decoration: none;
            }

        .static-navbar-item {
            -webkit-box-shadow: inset 0px 0px 0px 0px rgba(36,36,36,0.65)000;
            -moz-box-shadow: inset inset 0px 0px 0px 0px rgba(36,36,36,0.65);
            box-shadow: inset inset 0px 0px 0px 0px rgba(36,36,36,0.65);
            display: inline-block;
            position: relative;
            padding-bottom: 3px;
            margin-right: 10px;
            -webkit-transition: box-shadow 0.3s; /* Safari */
            transition: box-shadow 0.3s;
        }

            .static-navbar-item:hover {
                -webkit-box-shadow: 0px -6px 0px 0px white;
                -moz-box-shadow: inset inset 0px -6px 0px 0px white;
                box-shadow: inset inset 0px -6px 0px 0px white;
            }

        .category-homepage {
            height: 275px;
            margin: 20px 0;
        }

            .category-homepage img {
                height: 190px;
                width: 190px;
                padding: 2px;
                border: 1px solid #d7d7d7;
                transition: border 0.5s ease;
            }

                .category-homepage img:hover {
                    border: 1px solid #242424;
                }

        .media div {
            /*height: 74px;*/
        }

        /*#searchbox:focus {
            height: 38px;
            padding: 7px 40px 7px 20px;
            padding-right: 10px;
            border: none;
            -webkit-transition: all 0.2s ease;
            -moz-transition: all 0.2s ease;
            -o-transition: all 0.2s ease;
            transition: all 0.2s ease;
            width: 90%;
            margin: 0;
            float: left;
            background: none;
            margin-top: 10px;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
            box-shadow: none;
        }*/
    </style>

</head>

<body style="padding-top: 186px;">
    <div id="fb-root"></div>
    @*/ Script for facebook plugin /*@
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.10&appId=1481655535225355";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    @*/ Script for google map plugin /*@
    <script>
        function initMap() {
            var uluru = { lat: -25.363, lng: 131.044 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 4,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAte5w7RYGUcM0KH_BEUnRjijmMxJfXcNA&callback=initMap">
    </script>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="media" style="height: 95px;">
                            <div class="media-left media-middle">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                                    <img src="~/images/logo/logo.png" alt="Kim Huy Hoang" width="55" height="55" />
                                </a>
                            </div>
                            <div class="media-body media-middle" style="font-family: 'Oswald', sans-serif; color: #383838;">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                                    <h3 class="media-heading"><strong>KIM HUY HOÀNG</strong></h3>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group" id="searchbox" style="width: 80%; float: right; margin: 25px;">
                            <input type="text" class="form-control" style="background-color: #f5f5f5;" placeholder="Search for..." aria-label="Search for...">
                            <span class="input-group-btn">
                                <button class="btn" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="static-navbar">
            <div class="max-width-1200" style="margin: 0 auto;">
                <div class="row">
                    <div class="col-sm-12">
                        <ul class="list-inline static-navbar-table">
                            @foreach (var category in Model.ListCategory.Where(cat => cat.ParentId == -1))
                            {
                                <li class="static-navbar-item">
                                    <a class="text-dark" asp-area="" asp-controller="Category" asp-action="Index" asp-route-id="@category.Id">@category.Name</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        </ol>
        <div class="carousel-inner carousel-mod" role="listbox">
            <div class="item active">
                <img src="~/images/banner_1.gif" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Learn how to build ASP.NET apps that can run anywhere.
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br />
    <div class="container-fluid" style="padding: 0;">
        <div class="max-width-1200" style="margin: 0 auto;">
            <div class="row" style="margin-left: 0; margin-right: 0;">
                <div class="col-sm-3">
                    <h4 style="border-bottom: 1px solid #242424; padding-bottom: 10px;"><strong>Danh mục sản phẩm</strong></h4>
                    <ul class="list-unstyled">
                        @foreach (var cat in Model.ListCategory.Where(lc => lc.ParentId == -1))
                        {
                            var catActive = cat.Id == Model.ActiveCategoryId ? "active" : "";
                            <li class="left-menu-item root-category @catActive">
                                <a asp-controller="Category" asp-action="Index" asp-route-id="@cat.Id"><i class="fa fa-angle-right"></i> @cat.Name</a>
                            </li>
                            @if (Model.ListCategory.Any(lc => lc.ParentId == cat.Id))
                            {
                                <li>
                                    <ul class="list-unstyled">
                                        @foreach (var cat2 in Model.ListCategory.Where(lc => lc.ParentId == cat.Id))
                                        {
                                            var catActive2 = cat2.Id == Model.ActiveCategoryId ? "active" : "";
                                            <li class="left-menu-item @catActive2">
                                                <a asp-controller="Category" asp-action="Index" asp-route-id="@cat2.Id">&nbsp;&nbsp;<i class="fa fa-angle-right"></i> @cat2.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <br />
                    @* INFORMATION *@
                    <h4 style="border-bottom: 1px solid #242424; padding-bottom: 10px;"><strong>Thông tin công ty</strong></h4>
                    <ul class="list-unstyled information-block">
                        <li class="left-menu-item">
                            <a asp-controller="Home" asp-action="About">
                                <i class="fa fa-angle-right"></i><span> Giới thiệu</span>
                            </a>
                        </li>
                        <li class="left-menu-item">
                            <a asp-controller="Home" asp-action="Contact">
                                <i class="fa fa-angle-right"></i><span> Liên hệ</span>
                            </a>
                        </li>
                        <li class="left-menu-item">
                            <a asp-controller="Home" asp-action="Store">
                                <i class="fa fa-angle-right"></i><span> Chi nhánh, kho hàng</span>
                            </a>
                        </li>
                        <li class="left-menu-item">
                            <a asp-controller="Home" asp-action="Delivery">
                                <i class="fa fa-angle-right"></i><span> Chính sách vận chuyển</span>
                            </a>
                        </li>
                    </ul>
                    <br />
                </div>
                <div class="col-sm-9">
                    @RenderBody()
                </div>
                
            </div>
        </div>
        @Html.Partial("~/Views/Shared/_LayoutFooter.cshtml")
        <div class="container-fluid" style="padding: 0;">
            <div id="map"></div>
        </div>
        <div class="container-fluid" style="color: gray;font-size: 18px; font-weight: 700; padding-top: 15px; ">
            <h4 class="text-center">© 2017 Công ty TNHH TM&DV Kim Huy Hoàng. All Rights Reserved</h4>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
