@model AdminSite.Models.AccountModel;
<form asp-action="Login" asp-controller="Home" method="post" class="form-group">
	<br />
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <div class="form-group form-inline">
                <input asp-for="Username" class="form-control">
		    </div>
            <div class="form-group form-inline">
                <input asp-for="Password" class="form-control">
            </div>
            <input type="submit" class="btn btn-default center-block" value="Login" />
        </div>
    </div>
</form>
