@using System.Web;
@model EntityModel.Entity.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Views/Shared/_DetailHeader.cshtml", @Model.Name)
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            <p>@Html.DisplayFor(model => model.Name)</p>
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class="col-sm-10">
            <p>@Html.DisplayFor(model => model.Price)</p>
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            <img class="img-fluid" src="@Html.DisplayFor(model => model.ImageUrl)" alt="@Html.DisplayTextFor(model => model.Name)" height="300" width="300">
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(HttpUtility.HtmlDecode(Model.Description))
        </dd>
        <dt class="col-sm-2">
            Đơn vị tính
        </dt>
        <dd class="col-sm-10">
            <p>@Html.DisplayFor(model => model.UnitItem)</p>
        </dd>
        <dt class="col-sm-2">
            Nhóm hàng
        </dt>
        <dd class="col-sm-10">
            <p>@Html.DisplayFor(model => model.Category.Id)</p>
        </dd>
    </dl>
</div>
@Html.Partial("~/Views/Shared/_DetailFooter.cshtml", @Model.Id)
